<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE token  [
        <!ENTITY style SYSTEM "shared.css">
        <!ENTITY supply.en SYSTEM "supply.en.shtml">
        <!ENTITY withdraw.en SYSTEM "withdraw.en.shtml">
        <!ENTITY enable.en SYSTEM "enable.en.shtml">
        ]>
<ts:token xmlns:ts="http://tokenscript.org/2019/05/tokenscript"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:xml="http://www.w3.org/XML/1998/namespace"
          xsi:schemaLocation="http://tokenscript.org/2019/05/tokenscript"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          custodian="false"
>
    <ts:name>
        <ts:string xml:lang="en">USDT</ts:string>
    </ts:name>
    <ts:contract name="DDEX">
        <ts:address network="1">0x241e82C79452F51fbfc89Fac6d912e021dB1a3B7</ts:address>
    </ts:contract>
    <ts:contract name="USDT" interface="erc20">
        <ts:address network="1">0xdAC17F958D2ee523a2206206994597C13D831ec7</ts:address>
    </ts:contract>
    <!-- Must use a proxy due to the limitations of the current schema -->
    <ts:contract name="DDEXInterestRatesTether">
        <ts:address network="1">0xb63567FF8dB08548B56F57c4e968cC067d723592</ts:address>
    </ts:contract>
    <ts:origins>
        <ts:ethereum contract="USDT"/>
    </ts:origins>

    <ts:cards>
        <ts:token-card>
            <ts:view-iconified/>
            <ts:view>
            </ts:view>
        </ts:token-card>

        <ts:action>
            <ts:name>
                <ts:string xml:lang="en">Enable</ts:string>
            </ts:name>
            <ts:transaction>
                <ts:ethereum function="approve" contract="USDT" as="bool">
                    <ts:data>
                        <ts:address>0x241e82C79452F51fbfc89Fac6d912e021dB1a3B7</ts:address>
                        <ts:uint256>115792089237316195423570985008687907853269984665640564039457584007913129639935</ts:uint256>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <style type="text/css">&style;</style>
            <ts:view xml:lang="en">&enable.en;</ts:view>
        </ts:action>

        <ts:action>
            <ts:name>
                <ts:string xml:lang="en">Supply</ts:string>
            </ts:name>
            <ts:attribute-type id="mintAmount" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">Amount to supply</ts:string>
                </ts:name>
                <ts:origins>
                    <!-- e18 is a hard coded multiplier.
                    rationale for hardcoding: avoiding over-design  -->
                    <ts:user-entry as="e18"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:transaction>
                <ts:ethereum function="mint" contract="DDEX" as="uint">
                    <ts:data>
                        <ts:uint256 ref="mintAmount"/>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <style type="text/css">&style;</style>
            <ts:view xml:lang="en">&supply.en;</ts:view>
        </ts:action>

        <ts:action>
            <ts:name>
                <ts:string xml:lang="en">Withdraw</ts:string>
            </ts:name>
            <ts:attribute-type id="redeemAmount" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">Amount to withdraw</ts:string>
                </ts:name>
                <ts:origins>
                    <ts:user-entry as="uint"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:transaction>
                <ts:ethereum function="redeem" contract="DDEX" as="uint">
                    <ts:data>
                        <ts:uint256 ref="redeemAmount"/>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <style type="text/css">&style;</style>
            <ts:view xml:lang="en">&withdraw.en;</ts:view>
        </ts:action>


    </ts:cards>

    <ts:attribute-types>

        <ts:attribute-type id="allowance" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:origins>
                <ts:ethereum function="allowance" contract="USDT" as="uint">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                        <ts:address>0x241e82C79452F51fbfc89Fac6d912e021dB1a3B7</ts:address>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="tokenBalance" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Balance</ts:string>
                <ts:string xml:lang="zh">餘額</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="balanceOf" contract="USDT" as="uint">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="exchangeRate" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Exchange Rate</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="exchangeRateCurrent" contract="DDEX" as="uint">
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="amountSupplied" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Balance</ts:string>
                <ts:string xml:lang="zh">餘額</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="getAmountSupplied" contract="DDEX" as="uint">
                    <ts:data>
                        <ts:address>0xdAC17F958D2ee523a2206206994597C13D831ec7</ts:address>
                        <ts:address ref="ownerAddress"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="getSupplyInterestRate" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Supply Interest Rate</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="getSupplyInterestRate" contract="DDEXInterestRatesTether" as="uint">
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

    </ts:attribute-types>
</ts:token>